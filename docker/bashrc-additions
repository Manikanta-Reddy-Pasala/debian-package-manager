# DPM Environment Setup
export PATH="/root/.local/bin:/usr/local/bin:$PATH"
export PYTHONPATH="/workspace/src:$PYTHONPATH"

# Load bash completion for DPM
if [ -f /etc/bash_completion.d/dpm ]; then
    source /etc/bash_completion.d/dpm
fi

# Helpful aliases
alias ll='ls -la'
alias dpm-status='dpm health --verbose && dpm mode --status'
alias dpm-test='dpm list && dpm info docker-example'

# Welcome message
echo "🐳 Welcome to DPM Docker Environment!"
echo "📦 Debian Package Manager is ready to use"
echo "🎯 Tab completion is available! Try: dpm <TAB><TAB>"
echo ""
echo "🔧 Quick start commands:"
echo "  dpm --help              # Show all available commands"
echo "  dpm health              # Check system health"
echo "  dpm list                # List custom packages"
echo "  dpm list --all          # List all packages"
echo "  dpm info docker-example # Show example package info"
echo ""
echo "📦 Example workflows:"
echo "  dpm install <package>   # Install a package"
echo "  dpm install <package> --version <ver> # Install specific version"
echo "  dpm install <package> --force # Force installation"
echo "  dpm remove <package>    # Remove a package"
echo "  dpm cleanup --all       # Clean system"
echo ""
echo "🌐 Mode management:"
echo "  dpm mode --status       # Check current mode"
echo "  dpm mode --online       # Switch to online mode"
echo "  dpm mode --offline      # Switch to offline mode"
echo "  dpm mode --auto         # Auto-detect mode"
echo ""
echo "🔗 Remote testing:"
echo "  dpm connect user host   # Connect to remote system"
echo "  dpm connect --disconnect # Return to local"
echo "  dpm connect             # Show connection status"
echo ""
echo "🧪 Test aliases:"
echo "  dpm-status              # Show health and mode status"
echo "  dpm-test                # Test custom packages"
echo ""